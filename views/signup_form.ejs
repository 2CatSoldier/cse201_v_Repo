<nav>
  <div class="row nav-wrapper blue-grey darken-3">
    <div class="col s2 offset-s1">
      <a class="logo" href="/applications">v_Repo</a>
    </div>
  </div>
</nav>

<br>

<div class="form-body container">
  <div class="card grey lighten-5">
    <div class="card-content black-text">

      <span class="card-title">Sign Up</span>

      <% if (typeof errors != 'undefined') { %>
      <%  for (let error of errors) { %>
          <div class="row">
            <div class="col s12 card amber lighten-3">
              <%= error %>
            </div>
          </div>
      <%  } %>
      <% } %>

      <form class="col s12" method="POST" action="/user/signup" enctype="multipart/form-data">

        <div class="row">
          <div class="input-field col s6">
            <input id="fname" name="fname" type="text" class="validate" required="" value="<%= typeof fname != 'undefined' ? fname : '' %>">
            <label for="fname">First Name</label>
          </div>
          <div class="input-field col s6">
            <input id="lname" name="lname" type="text" class="validate" required="" value="<%= typeof lname != 'undefined' ? lname : '' %>">
            <label for="lname">Last Name</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="uname" name="uname" class="validate" type="text" required="" value="<%= typeof uname != 'undefined' ? uname : '' %>">
            <label for="uname">Username</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="pass1" name="pass1" class="validate" type="password" required="">
            <label for="pass1">Password</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="pass2" name="pass2" class="validate" type="password" required="">
            <label for="pass2">Re-Enter Password</label>
          </div>
        </div>
        <div class="row">
          <div class="file-field input-field col s12">
            <div class="btn">
              <span>Browse</span>
              <input type="file" name="image">
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" placeholder="Upload a picture">
            </div>
          </div>
        </div>

        <div class="row">
          <button class="btn waves-effect waves-light" type="submit">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>

      </form>

    </div>
  </div>
</div>

<style>
  .btn {
    float: right;
    margin-right: 20px;
  }
</style>
